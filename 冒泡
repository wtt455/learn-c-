# include  <stdio.h>
  void  bubble  _ sort  (int  arr[ ] int sz )
 {  
   int  i=0
     for  ( i=0 ; i<sz-1 ; i++）
    {
      int flag =1 ;//假设这一趟要排序的数据已经有序
      int=j =0  ;//每一趟冒泡排序
       for( j=0 ;j<sz-1-i;   j++)
      {
        if (arr [j]>arr[j+1])
       {
        int  tmp =arr[ j];
       arr[j] =arr [j+1]
       arr[j+1] =tmp  
       fldg=0  ;//本趟排序时的数据其实不完全有序
   }
    }
    if(flag ==1)
   {
      break 
    }
   int  main( )
   {
     int arr[ ]= { 9.8.7.6.5.4.3.2.10};//对 arr好、进行排序，排成升序
     int i=0;
    int sz =sizeof (arr)/sizeof(arr[0]);
    bubble _sort (arr);//arr是数组，我们对数组arr传参，实际上传递过去的数组arr首元素地址&arr[0]
  for  ( i=0 ;i<sz; i++）
    {
      printf ( "%d",arr[ 1 ])
       }
      return  0;
   }
     
